<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExchangeTabBar">
        <item name="android:background">@drawable/exchange_exchange_tab_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SimulationTabBar">
        <item name="android:background">@drawable/exchange_tab_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#d2d2d2</item>
    </style>

    <style name="SimulationUserBarButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/simulation_userbar_info_button</item>
    </style>

    <style name="SimulationInfoBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SimulationInfoBarText">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SimulationInfoBarButton">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/simulation_iconbar_info_button</item>
    </style>

    <style name="SimulationBuyButtonDefault">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SimulationBuyContentRightText">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
