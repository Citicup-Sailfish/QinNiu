<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MMTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingTop">2.5dip</item>
    </style>

    <style name="LoginRegisterButton">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="LoginRegisterButtonPress">
        <item name="android:background">@drawable/login_button_press</item>
        <item name="android:textColor">#798a99</item>
    </style>
</resources>
