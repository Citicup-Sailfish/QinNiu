                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale4Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--卖3-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="卖3"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale3Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale3Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--卖2-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="卖2"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale2Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale2Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--卖1-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="卖1"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale1Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightSale1Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--白线-->
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="#ffffff"/>

                    <!--白线-->
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="25dp"
                        android:background="#ffffff"/>

                    <!--买1-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="买1"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy1Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy1Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--买2-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="买2"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy2Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy2Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--买3-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="买3"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy3Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy3Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--买4-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="买4"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy4Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy4Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>

                    <!--买5-->
                    <TableRow
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">

                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="18dp"
                            android:gravity="left|center_vertical"
                            android:includeFontPadding="false"
                            android:text="买5"
                            android:textColor="#ffffff"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy5Price"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="left|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>

                        <TextView
                            android:id="@+id/ExchangeBuyContentRightBuy5Lots"
                            style="@style/SimulationBuyContentRightText"
                            android:gravity="right|center_vertical"
                            android:text="-"
                            android:textColor="#d2d2d2"/>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!--持仓部分-->

        <!--我的持仓-->
        <TextView
            android:id="@+id/ExchangeBuyPositionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ExchangeBuyContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="我的持仓"
            android:textColor="#d2d2d2"
            android:textSize="14sp"/>

        <ListView
            android:id="@+id/ExchangeBuyPosition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ExchangeBuyPositionTitle"
            android:layout_gravity="center_horizontal"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:listSelector="#00000000"/>
    </RelativeLayout>
</ScrollView>
