<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#394264">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />
        <!--来自谭潇模拟交易的选择卡，写Java时先问一下由一个人来写就好，避免重复-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--顶部框，包括个人登录，查找-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#50597b"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/CourseButton"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/iconmyself" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="资讯"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/CourseButtonSearch"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/icon_search" />

            </RelativeLayout>
            <RadioGroup
                android:id="@+id/information_ExchangeTabBar"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <!--要闻-->
                <RadioButton
                    android:id="@+id/information_ExchangeTabBar_yaowen"
                    style="@style/information_ExchangeTabBar"
                    android:checked="true"
                    android:text="要闻" />

                <!--滚动-->
                <RadioButton
                    android:id="@+id/information_ExchangeTabBar_hundong"
                    style="@style/information_ExchangeTabBar"
                    android:text="滚动" />

                <!--查询-->
                <RadioButton
                    android:id="@+id/information_ExchangeTabBar_jihui"
                    style="@style/information_ExchangeTabBar"
                    android:text="机会" />

                <!--自选股-->
                <RadioButton
                    android:id="@+id/information_ExchangeTabBar_zixuangu"
                    style="@style/information_ExchangeTabBar"
                    android:text="自选股" />

            </RadioGroup>
        </LinearLayout>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.0" />
    </LinearLayout>
</TabHost>
