<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#fdfafa">

    <!--图-->
    <ImageView
        android:id="@+id/GridItemImage"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY" />

    <!--标题-->
    <TextView
        android:id="@+id/GridItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/GridItemImage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:text=":test"
        android:textColor="#111111"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/GridItemBrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp">

        <!--浏览图标-->
        <ImageView
            android:id="@+id/GridItemBrowseIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/course_grid_item_browse_icon" />

        <!--浏览次数-->
        <TextView
            android:id="@+id/GridItemBrowseNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/GridItemBrowseIcon"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="#adacac"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
